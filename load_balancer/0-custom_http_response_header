#!/usr/bin/env bash
# Installs Nginx and configures custom pages and headers on multiple servers

# List of servers
servers=("54.84.15.122" "3.87.208.156")

# Loop through each server
for server in "${servers[@]}"; do
  echo "Configuring $server..."

  ssh ubuntu@"$server" bash -s <<'EOF'
    # Update and install Nginx
    sudo apt-get update
    sudo apt-get install -y nginx

    # Create index.html
    echo "Holberton School" | sudo tee /var/www/html/index.html

    # Create custom 404 page
    echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

    # Backup default Nginx config
    sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

    # Overwrite default Nginx config
    sudo tee /etc/nginx/sites-available/default > /dev/null <<'NGINXCONF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    # Custom header
    add_header X-Served-By $HOSTNAME;

    # Redirect /redirect_me permanently
    location = /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Default location
    location / {
        try_files $uri $uri/ =404;
    }

    # Custom 404 page
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
NGINXCONF

    # Test Nginx configuration
    sudo nginx -t

    # Restart Nginx to apply changes
    sudo systemctl restart nginx
EOF

  echo "$server configured successfully!"
done
